html,
body
  font-family $os
body
  overflow-x: hidden

html.burgeropen
  overflow hidden
  
.container
  max-width 1330px
  margin 0 auto
  @media $desktopMax
    max-width 1120px
  @media $tLandscapeMax
    max-width 940px
  @media $tPortraitMax
    max-width 700px
  @media $mLandscape
    max-width 100%
    padding 0 30px

.content
  pt 124px
  @media $mLandscape
    pt 72px
  &:not(.index)
    pt 190px
    @media $mLandscape
      pt 130px
  h1:not([class])
    color $dark
    fontify 48px 400 54px
    margin 43px 0 37px
  h2:not([class])
    color $dark
    fontify 30px 400 36px
    margin 43px 0 22px
  h3:not([class]),
  h4:not([class])
    color $dark
    fontify 24px 400 34px
    margin 43px 0 16px
  img:not([class])
    margin 6px 0
    max-width 100%
  * + img:not([class])
    mt 5px
  ul:not([class])
    list-style  none
    margin  18px 0
  ul:not([class]) li
    pl 30px
    pos relative
    fontify 14px 400 22px
  ul:not([class]) li + li
    mt 18px
  ul:not([class]) li:before
    content ""
    pos absolute
    l 0
    t 10px
    size 14px 2px
    bgc $orange
  ol:not([class])
    list-style none
    margin 18px 0
    counter-reset myCounter
  ol:not([class]) li
    pl 30px
    pos relative
    fontify 14px 400 22px
  ol:not([class]) li + li
    mt 12px
  ol:not([class]) li:befor
    counter-increment myCounter
    content counter(myCounter)"."	
    pos absolute
    l 0
    t 0
    w 41px
    pr 9px
    text-align right
    color $orange
    fontify 14px 400 22px
  table:not([class])
    border 5px solid $orange
    margin 23px 0
    max-width 100%
    table-layout fixed
  table:not([class]) th
    text-align left
    padding 18px 25px
    color white
    bgc $orange
    fontify 14px 400 22px 
  table:not([class]) td
    padding 18px 25px
    color $dark
    fontify 14px 400 22px 
    border 1px solid $dark
  p:not([class])
    color $dark
    fontify 14px 400 22px
    margin 18px 0
  a:not([class])
    color $orange
    border-bottom 1px solid
    transition .5s border
    &:hover
      border-color transparent
 
  *:not([class]):not(span):first-child
    mt 0 !important
  *:not([class]):not(span):last-child
    margin-bottom 0 !important

input::-webkit-input-placeholder
  color alpha(white, .5)
input::-moz-placeholder
  color alpha(white, .5)
input:-ms-input-placeholder
  color alpha(white, .5)

.common
  &__title
    color $dark
    fontify 44px 400 54px
    mb 25px
    @media $desktopMax
      fontify 38px 400 46px
    @media $tPortraitMax
      fontify 32px 400 36px
    @media $mPortraitMax
      fontify 24px 400 28px

.breadcrumbs
  mb 18px
  &__href
    color alpha($dark, .8)
    fontify 12px 400 18px
    border-bottom 1px solid alpha(#5d5d5d, .25)
    transition .5s border
    &:hover
      border-color transparent
  &__delim
    padding 0 9px
    fontify 12px 400 18px

.btn
  ib()
  bgc $orange
  border 0
  border-radius 24px
  color white
  outline none
  cursor pointer
  font-family $os
  fontify 14px 300 48px
  letter-spacing .1em
  text-transform uppercase;
  padding 0 45px
  transition .5s background
  &:hover
    bgc $orangeHov
  @media $tPortraitMax
    fontify 13px 300 38px
    padding 0 25px
  
.animator
  pos relative
  &:not(.visible)[data-direction="rtl"]
    right -100px
    opacity 0
  &:not(.visible)[data-direction="ltr"]
    l -100px
    opacity 0
  &:not(.visible)[data-direction="ttb"]
    top -100px
    opacity 0
  &:not(.visible)[data-direction="btt"]
    bottom -100px
    opacity 0
  &:not(.visible)[data-direction="fi"]
    opacity 0

input.warning,
textarea.warning
  border-color #ff3a0f

.hidden-block
  display none