imgCentering()
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax()
  position absolute
  left 50%
  top 50%
  max-width 90%
  max-height 90%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringMax100()
  position absolute
  left 50%
  top 50%
  max-width 100%
  max-height 100%
  transform translate(-50%, -50%) scale(1)
  transition 1s transform
  will-change transform
  
imgCenteringZoom()
  transform translate(-50%, -50%) scale(1.02)
  
size($w, $h = $w)
  width $w
  height $h
  
ib($align = top)
  display inline-block
  vertical-align $align
  
fontify($fs, $fw, $lh)
  font-size $fs
  font-weight $fw
  line-height $lh
  
w($val)
  width $val

h($val)
  height $val
  
t($val)
  top $val
  
r($val)
  right $val
  
l($val)
  left $val
  
b($val)
  bottom $val

bgc($val)
  background-color $val
  
dn()
  display none
  
db()
  display block
  
