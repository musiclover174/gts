.services
  mb 69px
  @media $tPortraitMax
    mb 39px
  &__list
    display flex
    align-items stretch
    justify-content space-between
    pt 5px
    @media $tPortraitMax
      flex-wrap wrap
      justify-content space-around
    @media $mLandscape
      justify-content flex-start
  &__item
    width calc(20% - 24px)
    text-align center
    @media $desktopMax
      width 20%
    @media $tPortraitMax
      width calc(100% / 3 - 20px)
      mb 30px
    @media $mLandscape
      width 50%
    @media $mPortraitMax
      width 100%
      mb 0
    & + &
      ml 30px
      @media $desktopMax
        ml 0
      @media $tPortraitMax
        ml 30px
      @media $mLandscape
        ml 0
    &-href
      padding 39px 38px 32px
      @media $tLandscapeMax
        padding 29px 28px 22px
      db()
      h 100%
      transition .5s background
      &:hover
        bgc $orange
    &-title
      color $dark
      fontify 16px 500 23px
      @media $tLandscapeMax
        fontify 14px 500 21px
      border-bottom 2px solid $orange
      transition .5s border, .5s color
      span
        pos relative
        top 2px
      ^[-1]:hover &
        border-color transparent
        color white
    &-imgover
      h 57px
      line-height 57px
      mb 31px
      transition .5s filter
      will-change filter
      ^[-1]:hover &
        filter: brightness(0) invert(1);
    &-icon
      display inline-block
      vertical-align middle
      max-height 100%
    