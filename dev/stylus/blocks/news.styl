.i-news
  padding 75px 0 80px
  &__hrefs
    mb 41px
    @media $tPortraitMax
      ml -15px
      width calc(100% + 15px)
  &__href
    ib()
    color $orange
    fontify 44px 400 40px
    @media $desktopMax
      fontify 38px 400 46px
    @media $tPortraitMax
      fontify 32px 400 36px
      ml 15px
    @media $mPortraitMax
      fontify 24px 400 28px
    border-bottom 2px dotted $orange
    transition .5s border, .5s color
    & + &
      ml 40px
      @media $tPortraitMax
        ml 15px
    &:hover
      border-color transparent
    &.active
      color #222
      border-color transparent
      cursor default
  &__wrapper
    display flex
    flex-wrap nowrap
    justify-content space-between
  &__content
    ib()
    w calc(100% - 370px)
    pos relative
    @media $tLandscapeMax
      width 100%
  &__banner
    w 310px
    ib()
    @media $tLandscapeMax
      dn()
  &__type
    dn()
    &:first-child
      db()
  &__toall
    pos absolute
    r 2px
    t -60px
    color $dark
    fontify 14px 500 18px
    border-bottom 2px solid $orange
    transition .5s border
    &:after
      content ""
      pos absolute
      t 1px
      r -32px
      size 24px 16px
      background url("data:image/png;base64,") no-repeat center
    @media $tPortrait
      &:hover
        border-color transparent
    @media $desktopMax
      t -65px
    @media $mLandscape
      pos relative
      r auto
      t 0
      mt 35px
      ib()
.news
  .news__list
    display flex
    flex-wrap wrap
    mb -40px
    ml -30px
    w calc(100% + 30px)
  &__elem
    display flex
    justify-content space-between
    @media $mLandscape
      flex-wrap wrap
      flex-direction column
    & + &
      mt 30px
      @media $mLandscape
        mt 35px
    ^[0] &
      &:not(^[-1]_bigger)
        w calc(25% - 30px)
        ib()
        @media $tLandscapeMax
          w calc(100% / 3 - 30px)
        @media $tPortraitMax
          w calc(50% - 30px)
        @media $mPortraitMax
          w calc(100% - 30px)
        & ^[0]__content
          w 100%
      mb 45px
      ml 30px
      & ^[0]__text
        mt 14px
      & + ^[-1]
        mt 0
      ^[-1]^[-1]_bigger
        w 100%
        @media $tPortraitMax
          flex-wrap wrap
          flex-direction column
        & ^[0]__imgover
          size 422px 281px
          mb 3px
          pt 0
          @media $tLandscapeMax
            size 380px 261px
          @media $tPortraitMax
            size 422px 281px
          @media $mPortraitMax
            w 100%
            h auto
            pt 67%
        & ^[0]__content
          w calc(100% - 452px)
          //pt 30px
          @media $tLandscapeMax
            w calc(100% - 410px)
            //pt 12px
          @media $tPortraitMax
            w 100%
            pt 20px
          @media $mLandscape
            pt 0
        & ^[0]__date
          fontify 14px 400 22px
          @media $mPortraitMax
            fontify 12px 400 18px
  &__imgover
    db()
    size 310px 207px
    overflow hidden
    pos relative
    @media $mLandscape
      db()
      max-width 100%
    ^[0] &
      border 2px solid #ececec
      mb 20px
      w 100%
      h auto
      pt 67%
    @media $tPortrait
      &:hover ^[0]__img
        imgCenteringZoom()
  &__content
    w calc(100% - 340px)
    @media $mLandscape
      w 100%
      mt 17px
  &__img
    imgCentering()
    ^[0] &
      imgCenteringMax()
  &__date
    color alpha($dark, .8)
    fontify 12px 400 18px
    mb 8px
    mt -4px
  &__href
    color $dark
    fontify 20px 500 28px
    ^[0] &
      fontify 16px 500 22px
      @media $mPortraitMax
        fontify 16px 500 24px
      &_bigger
        fontify 30px 400 36px
        @media $desktopMax
          fontify 24px 400 30px
        @media $tLandscapeMax
          fontify 22px 400 30px
        @media $mPortraitMax
          fontify 16px 500 24px
    border-bottom 2px solid $orange
    transition .5s border
    @media $tPortrait
      &:hover
        border-color transparent
  &__text
    color $dark
    fontify 14px 400 22px
    mt 23px
  &-inner
    &__date
      color alpha($dark, .5)
      fontify 14px 400 22px
      mt -12px
      mb 38px
