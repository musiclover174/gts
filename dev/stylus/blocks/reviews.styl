.reviews
  mb 62px
  pos relative
  z-index 1
  @media $mLandscape
    mb 122px
  &__page,
  .container,
  &__car-over
    pos relative
  &__toform
    db()
    pos absolute
    r 24px
    t -59px
    cursor pointer
    color $dark
    fontify 14px 500 17px
    border-bottom 2px dotted $orange
    transition .5s border
    @media $mPortraitMedium
      dn()
    &:hover
      border-color transparent
    &:after
      content ""
      pos absolute
      r -23px
      t 0
      size 14px 18px
      background url("data:image/png;base64,") no-repeat center
  &__toall
    float right
    mr 28px
    mt 31px
    @media $desktopMax
      mt 23px
    @media $tPortraitMax
      mt 16px
    pos relative
    color $dark
    fontify 14px 500 18px
    border-bottom 2px solid $orange
    transition .5s border
    &:after
      content ""
      pos absolute
      t 1px
      r -32px
      size 24px 16px
      background url("data:image/png;base64,") no-repeat center
    @media $tPortrait
      &:hover
        border-color transparent
    @media $mLandscape
      pos absolute
      b -50px
      l 30px
  &__make
    float right
    mr 30px
    mt 19px
    @media $desktopMax
      mt 8px
    @media $tPortraitMax
      mt 6px
    @media $mLandscape
      dn()
  &__car-over
    pt 6px
  &__elem
    border 2px solid #ececec
    display flex
    align-items stretch
    @media $mLandscape
      flex-wrap wrap
    ^[0]__page & + &
      mt 30px
  &__logo-blocker
    h 110px
    line-height 110px
    mb 35px
    @media $tLandscapeMax
      mb 18px
  &__logo
    max-height 100%
    display inline-block
    vertical-align middle
  &__about
    border-right 2px solid #ececec
    w 310px
    text-align center
    padding 47px 20px 0
    @media $desktopMax
      w 250px
    @media $tLandscapeMax
      padding 18px 15px 0
    @media $mLandscape
      w 100%
      border-right 0
      border-bottom 2px solid #ececec
      padding 20px 0
  &__name
    color $dark
    fontify 16px 500 24px
  &__content
    w calc(100% - 310px)
    padding 43px 47px
    overflow hidden
    @media $desktopMax
      w calc(100% - 250px)
      padding 43px 37px
    @media $mLandscape
      w 100%
      padding 27px 30px
  &__imgover
    float right
    w 372px
    ml 40px
    mt 6px
    @media $desktopMax
      width 322px
    @media $tLandscapeMax
      dn()
  &__img
    max-width 100%
  &__text
    max-width 430px
    @media $tLandscapeMax
      max-width 100%
  &__stars
    db()
    pos relative
    mt 5px
    mb 32px
    size 139px 20px
    background url("data:image/png;base64,") no-repeat left top
    &:before
      content ""
      pos absolute
      l 0
      t 0
      h 100%
      w 0
      background url("data:image/png;base64,") no-repeat left top
    &_star1:before
      w 20%
    &_star2:before
      w 40%
    &_star3:before
      w 60%
    &_star4:before
      w 80%
    &_star5:before
      w 100%
  &__person
    w 100%
    max-width 390px
    @media $tLandscapeMax
      max-width 100%
    mt 26px
    overflow hidden
    &-who
      max-width 225px
      color alpha($dark, .65)
      fontify 14px 400 22px
      font-style italic
      float left
      @media $mLandscape
        float none
    &-sign
      float right
      ml 20px
      @media $mLandscape
        float none
        ml 0
        mt 20px
  .swiper-button-prev
    l -73px
    outline none
    @media $lDesktopMax
      l -55px
    @media $tLandscapeMax
      t 0
      l 0
      mt 0
  .swiper-button-next
    r -73px
    outline none
    @media $lDesktopMax
      r -55px
    @media $tLandscapeMax
      t 0
      r auto
      l 66px
      mt 0
  .swiper-buttons
    @media $tLandscapeMax
      pos relative
      margin 0 auto
      z-index 10
      w 110px
      h 44px
      mt 30px
      mt 30px
      
  &__form
    mt 70px
    border 2px solid #ececec
    padding 50px
    display flex
    justify-content space-between
    @media $tLandscapeMax
      align-content flex-start
      flex-wrap wrap
    @media $mPortraitMax
      padding 35px
    &-stars
      pos relative
      overflow hidden
      mb 10px
      &-input
        pos absolute
        w 0
        h 0
        opacity 0
        l -1000px
        t -1000px
        border 0
    &-star
      ib()
      cursor pointer
      size 30px
      background url("data:image/png;base64,") no-repeat center
      transition .5s bac
      &.choosed
        background url("data:image/png;base64,") no-repeat center
      & + &
        ml 10px
    &-text
      color $dark
      w 380px
      @media $desktopMax
        w 342px
      @media $tLandscapeMax
        w 100%
    &-title
      fontify 30px 400 36px
      mb 20px
    &-main
      w 750px
      display flex
      justify-content space-between
      flex-wrap wrap
      @media $desktopMax
        w 610px
      @media $tLandscapeMax
        w 100%
        mt 30px
      @media $mLandscape
        flex-direction column
    &-bottom
      mt 20px
      w 100%
      display flex
      justify-content space-between
      @media $mLandscape
        flex-direction column
      .fakecheckbox
        mt 4px
        @media $tPortraitMax
          mt 0
        @media $mLandscape
          mb 20px
    .common__textarea
      h 184px