.card
  &__list
    display flex
    flex-wrap wrap
    ml -32px
    mb -30px
    w calc(100% + 32px)
  &__elem
    pos relative
    w calc(100% / 3 - 32px)
    ml 32px
    mb 30px
    border 2px solid #ececec
    padding 21px 29px 30px
    transition .5s border
    &:hover
      border-color $orange
    @media $tLandscapeMax
      w calc(50% - 32px)
    @media $mLandscape
      w calc(100% - 32px)
    &-hrefover
      mb 10px
      max-width 295px
      pr 35px
      mb 20px
      height 50px
      overflow hidden
      text-overflow ellipsis
      @media $mLandscape
        max-width 100%
        overflow visible
        height auto
    &-href
      color $dark
      fontify 16px 500 24px
      border-bottom 2px solid $orange
      transition .5s border
      &:hover
        border-color transparent
    &-icons
      t 28px
      r 27px
      pos absolute
      opacity 0
      transition .5s opacity
      ^[-1]:hover &
        opacity 1
    &-tofavorites
      db()
      border 0
      cursor pointer
      size 18px
      outline none
      background url("data:image/png;base64,") no-repeat center
      transition .5s background
      &.added,
      &:hover 
        background url("data:image/png;base64,") no-repeat center
    &-tocompare
      db()
      mt 15px
      border 0
      cursor pointer
      size 18px 14px
      outline none
      background url("data:image/png;base64,") no-repeat center
      transition .5s background
      &.added,      
      &:hover
        background url("data:image/png;base64,") no-repeat center
    &-info
      display flex
      justify-content space-between
    &-params
      w 133px
      @media $mPortraitMedium
        w 100%
      &-row
        max-width 110px
        @media $mPortraitMedium
          max-width 100%
        & + &
          mt 11px
      &-title
        color alpha($dark, .5)
        fontify 11px 400 15px
      &-val
        color $orange
        fontify 16px 400 24px
    &-imgover
      w calc(100% - 133px)
      display flex
      justify-content center
      pos relative
      @media $mPortraitMedium
        dn()
    &-img
      align-self center
      max-width 90%
      max-height 100%
    &-modified
      pos absolute
      b 0
      r 0
      &_new
        size 56px
        bgc #3eaa14
        border-radius 50%
        color white
        text-align center
        fontify 14px 500 56px
        text-transform uppercase
        &:before
          content "NEW"
      &_actions
        size 63px 23px
        bgc #ff1b41
        border-radius 12px
        color white
        text-align center
        fontify 12px 500 23px
        text-transform uppercase
        letter-spacing .04em
        &:before
          content "Акция"
      &_hit
        size 56px
        background url("data:image/png;base64,") no-repeat center
        border-radius 50%
        color white
        text-align center
        fontify 14px 500 56px
        text-transform uppercase
        &:before
          content "ХИТ"
    &-price
      border-top 1px solid #ececec
      pt 30px
      mt 17px
      pos relative
      display flex
      justify-content space-between
      @media $mPortraitMedium
        flex-direction column
    &-cost
      color $orange
      fontify 22px 400 22px
      pt 12px
      sub
        font-size 15px
      @media $tPortraitMax
        pt 4px
    &-prevcost
      pos absolute
      color #a5a5a5
      fontify 14px 400 14px
      t 24px
      l 0
      text-decoration line-through
      @media $tPortraitMax
        t 18px
    &-tocart
      pos relative
      pl 58px
      pr 28px
      font-family FiraSans
      &:before
        content attr(data-default)
      &:after
        content ""
        size 17px
        pos absolute
        l 31px
        t 16px
        background url("data:image/png;base64,") no-repeat center
        @media $tPortraitMax
          l 16px
          t 11px
      &.added
        &:before
          content attr(data-added)
      @media $tPortraitMax
        pl 41px
        pr 17px
      @media $mPortraitMedium
        mt 15px