.reviews + .clients
  mt -46px
  @media $tLandscapeMax
    mt -26px
.clients
  mb 26px
  @media $tLandscapeMax
    mb 46px
  pos relative
  z-index 1
  .container
    pos relative
  .swiper-wrapper
    align-items stretch
  .swiper-slide
    display flex
    height 240px
    @media $tLandscapeMax
      height 180px
  &__img
    align-self center
    db()
    margin 0 auto
    max-width 90%
  .swiper-button-prev
    l -73px
    outline none
    @media $lDesktopMax
      l -55px
    @media $desktopMax
      t 92px
    @media $tLandscapeMax
      t 0
      l 0
  .swiper-button-next
    r -73px
    outline none
    @media $lDesktopMax
      r -55px
    @media $desktopMax
      t 92px
    @media $tLandscapeMax
      t 0
      r auto
      l 66px
  .swiper-buttons
    @media $tLandscapeMax
      pos relative
      margin 0 auto
      z-index 10
      w 110px
      h 44px
      mt 30px