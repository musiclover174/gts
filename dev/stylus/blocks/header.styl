.header
  pos fixed
  t 0
  l 0
  r 0
  z-index 10
  box-shadow 0 0 2px rgba(0, 0, 0, .25)
  &__top
    bgc #1a1a18
    @media $mLandscape
      dn()
  &__bottom
    h 86px
    bgc white
    @media $mLandscape
      h 72px
  &__icons
    float right
    mt 34px
    ml 51px
    @media $mLandscape
      dn()
    &-elem
      ib()
      pos relative
      color white
      size 18px
      bgc $orange
      fontify 12px 500 18px
      border-radius 50%
      text-align center
      transition .5s background
      &.empty
        background black
      &:before
        content ""
        pos absolute
        r 22px
        t 1px
      &_card:before
        size 17px
        background url("data:image/png;base64,") no-repeat center
      &_favorite:before
        size 18px
        t 0
        background url("data:image/png;base64,") no-repeat center
      &_compare:before
        size 18px 14px
        t 2px
        background url("data:image/png;base64,") no-repeat center
      & + &
        ml 51px
        @media $desktopMax
          ml 38px
      &:not(.empty):hover
        background alpha($orange, 0.8)
    
  &__contacts
    float right
    text-align right
    mt 19px
    @media $tLandscapeMax
      mt 4px
    @media $tPortraitMax
      dn()
    &-row
      color alpha(#0e0e0e, .8)
      fontify 12px 400 18px
      span
        @media $tLandscapeMax
          db()
      a
        ib bottom
        ml 13px
        @media $desktopMax
          ml 7px
        fontify 16px 700 20px
        color #0e0e0e
        @media $tLandscapeMax
          fontify 14px 700 16px
      & + &
        mt 5px
        @media $tLandscapeMax
          mt 3px
  &__logo
    ib()
    mt 18px
    mr 91px
    @media $desktopMax
      mr 51px
    @media $tPortraitMax
      mr 27px
    @media $mLandscape
      mt 10px
.town
  float right
  color white
  fontify 12px 400 16px
  mt 11px
  pos relative
  &:before
    content ""
    pos absolute
    l -20px
    t 1px
    w 10px
    h 13px
    background url("data:image/png;base64,") no-repeat center
  &__href
    color inherit
    border-bottom 1px dotted alpha(#fff, 0.3)
    transition .5s border
    &:hover
      border-color transparent
.menu
  display flex
  font-size 0
  &__item
    display inline-block
    vertical-align top
    & + &
      ml 28px
      @media $desktopMax
        ml 20px
    &-href
      display inline-block
      vertical-align top
      color white
      fontify 10px 700 36px
      text-transform uppercase
      letter-spacing 0.1em
      border-bottom 2px solid transparent
      transition .5s border, .5s color
      &.active,
      &:hover
        color $orange
        border-color $orange
.search
  float right
  pos relative
  size 17px
  mt 34px
  ml 40px
  @media $tLandscapeMax
    ml 34px
  &__icon
    pos relative
    z-index 1
    border 0
    size 17px
    cursor pointer
    background url("data:image/png;base64,") no-repeat center
    transition .5s opacity
    &:hover
      opacity .8
  &__input
    pos absolute
    visibility hidden
    opacity 0
    l -13px
    t 50%
    h 48px
    mt -24px
    border-radius 24px
    w 238px
    @media $desktopMax
      w 211px
    border 0
    padding 0 19px 0 39px
    font-family $os
    box-shadow: 0px 0px 3px alpha(black, .25);
    transition .5s opacity, .5s visibility
    ^[0]:hover &
      visibility visible
      opacity 1
  @media $mLandscape
    dn()
.navcats
  ib()
  mt 33px
  @media $mLandscape
    dn()
  &__list
    font-size 0
  &__item
    ib()
    & + &
      ml 85px
      @media $desktopMax
        ml 55px
      @media $tPortraitMax
        ml 25px
    &-href
      pos relative
      color #0e0e0e
      fontify 15px 700 21px
      text-transform uppercase
      letter-spacing .1em
      transition .5s color
      &:before
        content ""
        pos absolute
        r calc(100% + 14px)
        t 50%
        transform translateY(-50%)
        transition .5s background
        @media $desktopMax
          r calc(100% + 8px)
        @media $tPortraitMax
          dn()
      &_stell:before
        size 22px 28px
        background url("data:image/png;base64,") no-repeat center
      &_stell:hover:before
          background url("data:image/png;base64,") no-repeat center
      &_tech:before
        size 23px 33px
        background url("data:image/png;base64,") no-repeat center
      &_tech:hover:before
        background url("data:image/png;base64,") no-repeat center
      &_serv:before
        size 30px 28px
        background url("data:image/png;base64,") no-repeat center
      &_serv:hover:before
        background url("data:image/png;base64,") no-repeat center
      &:hover
        color $orange
        
.burger
  float right
  mt 14px
  mr -14px
  @media $tPortrait
    dn()
  &__icon
    size 44px
    bgc white
    pos relative
    border 0
    cursor pointer
    &:before,
    span,
    &:after
      size 16px 2px
      content ""
      bgc $orange
    &:before
      pos absolute
      t 14px
      l 14px
      transition .5s all
    span
      pos absolute
      t 21px
      l 14px
      transition .5s all
    &:after
      pos absolute
      b 14px
      l 14px
      transition .5s all
