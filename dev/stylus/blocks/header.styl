.header
  pos fixed
  t 0
  l 0
  r 0
  z-index 10
  box-shadow 0 6px 15px rgba(0, 0, 0, 0.05)
  @media $mPortraitMax
    overflow hidden
    w 100vw
  &__top
    bgc #1a1a18
    @media $mLandscape
      dn()
  &__bottom
    h 86px
    bgc white
    @media $mLandscape
      h 72px
  &__icons
    float right
    mt 34px
    ml 51px
    @media $mLandscape
      dn()
    &-elem
      ib()
      pos relative
      color white
      size 18px
      bgc $orange
      fontify 12px 500 18px
      border-radius 50%
      text-align center
      transition .5s background
      &.empty
        background black
      &:before
        content ""
        pos absolute
        r 22px
        t 1px
      &_card:before
        size 17px
        background url("data:image/png;base64,") no-repeat center
      &_favorite:before
        size 18px
        t 0
        background url("data:image/png;base64,") no-repeat center
      &_compare:before
        size 18px 14px
        t 2px
        background url("data:image/png;base64,") no-repeat center
      & + &
        ml 51px
        @media $desktopMax
          ml 38px
      &:not(.empty):hover
        background alpha($orange, 0.8)
    
  &__contacts
    float right
    text-align right
    mt 19px
    @media $tLandscapeMax
      mt 4px
    @media $tPortraitMax
      dn()
    @media $mLandscape
      db()
      mt 16px
      mr 22px
    @media $mPortraitMedium
      mr 15px
    &-row
      color alpha(#0e0e0e, .8)
      fontify 12px 400 18px
      span
        @media $tLandscapeMax
          db()
        @media $mLandscape
          dn()
      a
        ib bottom
        ml 13px
        @media $desktopMax
          ml 7px
        fontify 16px 700 20px
        color #0e0e0e
        @media $tLandscapeMax
          fontify 14px 700 16px
        @media $mPortraitMedium
          fontify 12px 400 14px
          ml 0
      & + &
        mt 5px
        @media $tLandscapeMax
          mt 3px
  &__logo
    ib()
    mt 18px
    mr 59px
    @media $desktopMax
      mr 27px
    @media $tPortraitMax
      mr 15px
    @media $mLandscape
      mt 10px
    @media $mPortraitMedium
      w 80px
      mt 18px
      mr 10px
    img
      max-width 100%
.town
  float right
  color white
  fontify 12px 400 16px
  mt 11px
  pos relative
  &:before
    content ""
    pos absolute
    l -20px
    t 1px
    w 10px
    h 13px
    background url("data:image/png;base64,") no-repeat center
  &__href
    color inherit
    border-bottom 1px dotted alpha(#fff, 0.3)
    transition .5s border
    &:hover
      border-color transparent
.menu
  display flex
  font-size 0
  &__item
    display inline-block
    vertical-align top
    & + &
      ml 28px
      @media $desktopMax
        ml 20px
    &-href
      display inline-block
      vertical-align top
      color white
      fontify 10px 700 36px
      text-transform uppercase
      letter-spacing 0.1em
      border-bottom 2px solid transparent
      transition .5s border, .5s color
      &.active,
      &:hover
        color $orange
        border-color $orange
  &__sublist
    mt 10px
  &__subitem
    & + &
      mt 5px
    &-href
      color white
      fontify 15px 400 28px
      &.active,
      &:hover
        border-color transparent
        color white
        font-weight 700
.navcats
  ib()
  mt 33px
  @media $mLandscape
    dn()
  &__list
    font-size 0
  &__item
    ib()
    pos relative
    & + &
      ml 64px
      @media $desktopMax
        ml 25px
      @media $tPortraitMax
        ml 15px
    &-href
      pos relative
      color #0e0e0e
      fontify 13px 700 21px
      text-transform uppercase
      letter-spacing .1em
      transition .5s color
      &:before
        content ""
        pos absolute
        r calc(100% + 12px)
        t 50%
        transform translateY(-50%)
        transition .5s background
        @media $desktopMax
          dn()
          r calc(100% + 8px)
      &_cat:before
        size 31px 28px
        background url("data:image/png;base64,") no-repeat top left
      &_cat:hover:before
          background url("data:image/png;base64,") no-repeat top left
      &_stell:before
        size 22px 28px
        background url("data:image/png;base64,") no-repeat center
      &_stell:hover:before
          background url("data:image/png;base64,") no-repeat center
      &_tech:before
        size 23px 34px
        background url("data:image/png;base64,") no-repeat center
      &_tech:hover:before
        background url("data:image/png;base64,") no-repeat center
      &_serv:before
        size 30px 28px
        background url("data:image/png;base64,") no-repeat center
      &_serv:hover:before
        background url("data:image/png;base64,") no-repeat center
      &:hover
        color $orange
        
    &:hover ^[0]__droplist
      visibility visible
      opacity 1
  &__droplist
    padding 18px 0
    bgc whitesmoke
    pos absolute
    l -72px
    t 53px
    visibility hidden
    opacity 0
    transition .25s visibility, .25s opacity
    &:before
      content ""
      pos absolute
      l 0
      w 100%
      h 38px
      t -38px
    @media $desktopMax
      l -32px
    @media $tLandscapeMax
      padding 10px 0
  &__dropitem
    &-href
      db()
      w 283px
      padding 8px 29px 9px
      color $dark
      fontify 14px 400 18px
      transition .5s background, .5s color
      &:hover
        bgc white
      &.active
        color $orange
      @media $tLandscapeMax
        w 260px
        padding 6px 22px 7px
    &:hover ^[0]__sublist
      visibility visible
      opacity 1
  &__sublist
    pos absolute
    visibility hidden
    opacity 0
    padding 25px 30px 0 0
    l 283px
    t 0
    w 694px
    h 100%
    bgc white
    display flex
    flex-direction column
    flex-wrap wrap
    transition .25s visibility, .25s opacity
    @media $tLandscapeMax
      dn()
  &__subitem
    w 191px
    mb 19px
    ml 30px
    &-href
      color $dark
      fontify 14px 500 22px
      border-bottom 1px solid transparent
      transition .5s border
      &.active,
      &:hover
        border-color $dark
  &__deeplist
    mt 11px
    mb -4px
  &__deepitem
    mb 6px
    pos relative
    &:hover
      z-index 1
    &-href
      color $dark
      fontify 12px 400 18px
      border-bottom 1px solid transparent
      transition .5s border
      &-img
        pos absolute
        l 100%
        size 90px
        background-repeat no-repeat
        background-position center
        background-color white
        border 2px solid #ececec
        t 50%
        transform translateY(-50%)
        visibility hidden
      &:hover &-img
        visibility visible
      &.active,
      &:hover
        border-color currentColor
      &_toall
        color $orange
.burger
  float right
  mt 14px
  mr -14px
  @media $tPortrait
    dn()
  &__shadow
    pos fixed
    w 100%
    h 0
    t 0
    l 0
    bgc #e97e2f
    z-index 2
    transition .5s height
  &__menu
    display flex
    flex-direction column
    flex-wrap wrap
    pos fixed
    z-index 3
    w 100%
    h 100%
    l 0
    t 0
    padding 60px 20px
    text-align center
    overflow auto
    visibility hidden
    opacity 0
    transition .5s opacity, .5s visibility
    @media $tPortrait
      dn()
    &.open
      visibility visible
      opacity 1
    .town
      float none
      fontify 15px 400 18px
      &:before
        dn()
    .menu
      &__list
        mt 30px
      &__item
        db()
        & + .menu__item
          ml 0
          mt 20px
        &-href
          fontify 15px 400 28px
          &.active,
          &:hover
            border-color transparent
            color white
            font-weight 700
    .header__icons
      db()
      float none
      ml 0
      &-elem:before
        filter grayscale(100%) invert(100%)
    .search
      db()
      float none
      ml 0
      w 100%
      h 48px
      &__icon
        position absolute
        right 14px
        t 50%
        mt -8px
      &__input
        w 100%
        l 0
        padding 0 39px 0 19px
        visibility visible
        opacity 1
  &__icon
    outline none
    size 44px
    pos relative
    border 0
    cursor pointer
    z-index 4
    bgc transparent
    &:before,
    span,
    &:after
      size 16px 2px
      content ""
      bgc $orange
    &:before
      pos absolute
      t 14px
      l 14px
      transition .5s transform, .5s background
      will-change transform
    span
      pos absolute
      t 21px
      l 14px
      transition .5s opacity
    &:after
      pos absolute
      b 14px
      l 14px
      transition .5s transform, .5s background
      will-change transform
    &.open
      span
        opacity 0
      &:before
        transform rotate(225deg)
        t 21px
        bgc white
      &:after
        transform rotate(-225deg)
        b 21px
        bgc white
      & + ^[0]__shadow
        h 100%