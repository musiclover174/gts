.footer
  bgc #1a1a18
  padding 75px 0 80px
  mt 60px
  &__cols
    display flex
  &__col
    pr 20px
    width 25%
  &__info
    color white
    mt 38px
    fontify 14px 400 19px
  &__addr
    color white
    mt 38px
    fontify 14px 400 19px
  &__phones
    mt 38px
    a
      color white
      fontify 14px 400 19px
  &__mail
    ib()
    mt 38px
    color white
    fontify 14px 400 19px
    border-bottom 1px solid alpha(white, .25)
    transition .5s border
    &:hover
      border-color transparent
  &__socials
    mt 38px
  &__social
    ib()
    size 32px
    pos relative
    bgc #8d8d8c
    border-radius 50%
    transition .5s background
    &:hover
      bgc $orange
    & + &
      ml 15px
    &:before
      content ""
      pos absolute
    &_fb:before
      size 7px 14px
      t 9px
      l 12px
      background url("data:image/png;base64,") no-repeat center
    &_vk:before
      size 15px 8px
      t 13px
      l 9px
      background url("data:image/png;base64,") no-repeat center
    &_yt:before
      size 14px 10px
      t 11px
      l 9px
      background url("data:image/png;base64,") no-repeat center
    &_tw:before
      size 13px 12px
      t 10px
      l 10px
      background url("data:image/png;base64,") no-repeat center
  &__mainhref
    color white
    fontify 18px 400 21px
    border-bottom 2px solid $orange
    transition .5s border
    &.active,
    &:hover
      border-color transparent
  &__listhref
    mt 25px
  &__href
    color alpha(#fff, .5)
    fontify 14px 400 20px
    transition .5s color
    &.active,
    &:hover
      color alpha(#fff, 1)