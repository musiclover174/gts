.footer
  bgc #1a1a18
  padding 75px 0 80px
  @media $tPortraitMax
    pb 20px
  mt 105px
  &__cols
    display flex
    justify-content space-between
    @media $tPortraitMax
      flex-wrap wrap
  &__col
    width calc(25% - 90px / 4)
    @media $tPortraitMax
      width calc(50% - 15px)
      mb 60px
    @media $mPortraitMax
      width 100%
  &__logo
    mt 3px
  &__info
    color white
    mt 32px
    fontify 14px 400 19px
    max-width 250px
  &__addr
    color white
    mt 31px
    fontify 14px 400 19px
    max-width 250px
  &__phones
    mt 31px
    a
      color white
      fontify 14px 400 19px
    br
      dn()
      @media $tLandscapeMax
        db()
  &__mail
    ib()
    mt 33px
    color white
    fontify 14px 400 19px
    border-bottom 1px solid alpha(white, .25)
    transition .5s border
    &:hover
      border-color transparent
  &__socials
    mt 33px
  &__social
    ib()
    size 32px
    pos relative
    bgc #8d8d8c
    border-radius 50%
    transition .5s background
    &:hover
      bgc $orange
    & + &
      ml 15px
    &:before
      content ""
      pos absolute
    &_fb:before
      size 7px 14px
      t 9px
      l 12px
      background url("data:image/png;base64,") no-repeat center
    &_vk:before
      size 15px 8px
      t 13px
      l 9px
      background url("data:image/png;base64,") no-repeat center
    &_yt:before
      size 14px 10px
      t 11px
      l 9px
      background url("data:image/png;base64,") no-repeat center
    &_tw:before
      size 13px 12px
      t 10px
      l 10px
      background url("data:image/png;base64,") no-repeat center
  &__mainhref
    color white
    fontify 18px 400 26px
    letter-spacing .025em
    border-bottom 2px solid $orange
    transition .5s border
    &.active,
    &:hover
      border-color transparent
  &__listhref
    mt 27px
    mb 30px
    &:last-child
      mb 0
  &__itemhref
    & + &
      mt 16px
  &__calc
    mt 15px
    @media $desktopMax
      padding 0 25px
    @media $tLandscapeMax
      padding 0
      text-align center
      w 100%
      fontify 13px 300 38px
  &__href
    color alpha(#fff, .5)
    fontify 14px 300 20px
    letter-spacing .025em
    transition .5s color, .5s border
    &.active,
    &:hover
      color alpha(#fff, 1)
    &_white
      color white
    &_bordered
      border-bottom 2px solid $orange
      &.active,
      &:hover
        border-color transparent
  &__dextra-over
    mt 42px
  &__dextra
    color darkgrey
    fontify 15px 400 24px
    span
      color white
      border-bottom 1px solid alpha(white, .5)
      transition .5s border
      ^[-1]:hover span
        border-color transparent
