.projects
  mb 62px
  pos relative
  z-index 1
  .container,
  &__car-over
    pos relative
  &__page
    mt 46px
  &__list
    display flex
    flex-wrap wrap
    ml -30px
    w calc(100% + 30px)
    mb -45px
  &__elem
    w calc(25% - 30px)
    ml 30px
    mb 45px
    @media $desktopMax
      w calc(100% / 3 - 30px)
    @media $tPortraitMax
      w calc(50% - 30px)
    @media $mLandscape
      w calc(100% - 30px)
  &__imgover
    db()
    w 100%
    pt 66%
    overflow hidden
    pos relative
    mb 26px
    @media $tLandscapeMax
      mb 16px
    ^[0]__page &
      mb 16px
  &__img
    imgCentering()
    @media $tPortrait
      &:hover 
        imgCenteringZoom()
  &__cost
    db()
    bgc #2e2e2e
    pos absolute
    z-index 1
    l 0
    b 0
    padding 12px 20px 14px
    color #fefefe
    fontify 20px 500 24px
    sup
      vertical-align super
      font-size 12px
    @media $desktopMax
      fontify 18px 500 22px
    @media $tLandscapeMax
      fontify 15px 400 21px
      padding 8px 10px 10px
    ^[0]__page &
      fontify 15px 400 21px
      padding 8px 20px 10px
  &__href
    color $dark
    fontify 20px 500 26px
    border-bottom 2px solid $orange
    transition .5s border
    &:hover
      border-color transparent
    @media $tLandscapeMax
      fontify 18px 500 24px
    ^[0]__page &
      fontify 16px 500 22px
  &__text
    color $dark
    fontify 14px 400 22px
    mt 15px
    ^[0]__page &
      mt 20px
  &__toall
    pos absolute
    r 32px
    t 30px
    color $dark
    fontify 14px 500 18px
    border-bottom 2px solid $orange
    transition .5s border
    &:after
      content ""
      pos absolute
      t 1px
      r -32px
      size 24px 16px
      background url("data:image/png;base64,") no-repeat center
    @media $tPortrait
      &:hover
        border-color transparent
    @media $desktopMax
      t 23px
    @media $tPortraitMax
      pos relative
      r auto
      t 0
      mt 35px
      ib()
  .swiper-button-prev
    l -73px
    t 117px
    mt 0
    outline none
    @media $lDesktopMax
      l -55px
    @media $desktopMax
      t 92px
    @media $tLandscapeMax
      t 0
      l 0
  .swiper-button-next
    r -73px
    t 117px
    mt 0
    outline none
    @media $lDesktopMax
      r -55px
    @media $desktopMax
      t 92px
    @media $tLandscapeMax
      t 0
      r auto
      l 66px
  .swiper-buttons
    @media $tLandscapeMax
      pos relative
      margin 0 auto
      z-index 10
      w 110px
      h 44px
      mt 30px
