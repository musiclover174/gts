.search
  pos fixed
  t 0
  l 0
  w 100vw
  h 100vh
  z-index 11
  text-align center
  overflow auto
  pt 100px
  opacity 0
  visibility hidden
  transition .5s opacity, .5s visibility
  &-page
    mt -8px
  &.open
    opacity 1
    visibility visible
  &__bg
    pos fixed
    t 0
    l 0
    w 100%
    h 100%
    z-index -1
    bgc #222222
  &__form
    w 90%
    max-width 990px
    margin 0 auto
    text-align left
    pos relative
    @media $tLandscapeMax
      max-width 100%
      w 100%
      padding 0 20px
    
    ^[0]-page &
      ml 0
      mb 54px
      @media $tLandscapeMax
        padding 0
  &__icon
    pos absolute
    r 0 
    t 19px
    z-index -1
    size 21px
    border 0
    background url("data:image/png;base64,") no-repeat center
    @media $tLandscapeMax
      r 20px
    @media $tPortraitMax
      t 10px
      
    ^[0]-page &
      cursor pointer
      z-index 1
      t 21px
      r -2px
      background url("data:image/png;base64,") no-repeat center
      transition .5s opacity
      &:hover 
        opacity .7
      @media $tPortraitMax
        t 10px
  &__inp
    bgc transparent
    border 0
    border-bottom 1px solid white
    w 100%
    color white
    font-family $os
    fontify 30px 300 60px
    ^[0]-page &
      border-bottom 2px solid $dark
      color $dark
      pr 35px
      &::-webkit-input-placeholder
        color alpha($dark, .8)
      &::-moz-placeholder
        color alpha($dark, .8)
      &:-ms-input-placeholder
        color alpha($dark, .8)
    @media $tPortraitMax
      fontify 18px 300 40px
  &__close
    ib()
    position absolute
    r 50px
    t 50px
    size 20px
    background url("data:image/png;base64,") no-repeat center
    transition: .5s background;
    @media $tLandscapeMax
      t 20px
      r 20px
    &:hover
      background url("data:image/png;base64,") no-repeat center
  &__title
    color white
    fontify 18px 500 21px
    mb 36px
    mt 50px
    &:first-child
      mt 0
  &__res
    w 100%
    margin 56px 0 44px
    visibility hidden
    opacity 0
    transition 1s visibility, 1s opacity
    &.open
      visibility visible
      opacity 1
    &-text
      color $dark
      fontify 14px 400 22px
      mb 34px
    &-about
      color $dark
      fontify 14px 400 22px
      mb 0
      mt 18px
    &-list
      display flex
      flex-direction column
      &_ordered
        counter-reset myCounter
      &_products
        w 100%
        flex-direction row
        flex-wrap wrap
        justify-content space-between
        mb -30px
        @media $mLandscape
          flex-direction column
    &-elem
      db()
      ^[0]-page &
        max-width 875px
        pl 30px
        pos relative
        &:before
          content counter(myCounter)'.'
          counter-increment myCounter
          color $orange
          fontify 14px 700 22px
          pos absolute
          l 0
          t 0
      & + &
        mt 14px
    &-href
      ib()
      color white
      fontify 14px 400 22px
      border-bottom 1px solid $orange
      white-space nowrap
      max-width 100%
      text-overflow ellipsis
      overflow hidden
      transition .5s border
      &:hover
        border-color transparent
      ^[0]-page &
        color $dark
    &-toall
      ib()
      mt 37px
      color white
      pos relative
      fontify 14px 500 18px
      border-bottom 2px solid $orange
      transition .5s border
      &:hover
        border-color:transparent;
      &:after
        content ""
        pos absolute
        r -33px
        t 1px
        size 24px 16px
        background url("data:image/png;base64,") no-repeat center
  &__product
    display flex
    w calc(50% - 20px)
    mb 30px
    @media $mLandscape
      w 100%
    &-imgover
      db()
      bgc white
      size 120px
      border 2px solid #ececec
      pos relative
      overflow hidden
      @media $mPortraitMedium
        dn()
    &-content
      w calc(100% - 140px)
      ml 20px
      pt 5px
      max-width 228px
      @media $mPortraitMedium
        max-width 100%
        ml 0
        w 100%
    &-href
      color white
      fontify 14px 500 20px
      border-bottom 1px solid $orange
      transition .5s border
      &:hover
        border-color transparent
    &-img
      imgCentering()
    &:hover &-img
      imgCenteringZoom()
    &-chars
      display flex
      justify-content space-between
      mt 10px
    &-weight
      color white
      fontify 12px 400 20px
      pos relative
      pl 23px
      &:before
        content ""
        pos absolute
        l 0
        t 3px
        size 17px 15px
        background url("data:image/png;base64,") no-repeat center
    &-size
      color white
      fontify 12px 400 20px
      pos relative
      pl 18px
      &:before
        content ""
        pos absolute
        l 0
        t 3px
        size 13px
        background url("data:image/png;base64,") no-repeat center
    &-price
      display flex
      mt 10px
    &-cost
      color #fff
      fontify 22px 500 22px
      sub
        font-size 15px
    &-prevcost
      color #fff
      pt 10px
      pl 24px
      font-family FiraSans
      fontify 14px 400 14px
      text-decoration line-through
  &__open
    float right
    size 17px
    mt 34px
    ml 40px
    cursor pointer
    outline none
    border 0
    background url("data:image/png;base64,") no-repeat center
    transition .5s opacity
    &:hover
      opacity .8
    @media $tLandscapeMax
      ml 34px
    @media $mLandscapeMax
      mt 28px
      ml 0
      mr 13px
    @media $mPortraitMedium
      mr 4px
  &__showall
    text-align center
    mt 30px
    pr 30px
    & + ^[0]__res-list
      mt 50px
    &-href
      pos relative
      color $dark
      fontify 14px 500 18px
      border-bottom 2px solid $orange
      transition .5s border
      &:hover
        border-color transparent
      &:after
        content ""
        pos absolute
        r -33px
        t 2px
        size 24px 16px
        background url("data:image/png;base64,") no-repeat center