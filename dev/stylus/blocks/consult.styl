.consult
  pos relative
  z-index 1
  padding 82px 0 80px
  mt 80px
  mb 70px
  &:before
    content ""
    w calc(100vw + 20px)
    h 100%
    pos absolute
    z-index -1
    t 0
    l 50%
    transform translateX(-50%)
    bgc whitesmoke
  &__buttons
    display flex
    flex-wrap wrap
    @media $mLandscape
      flex-direction column
      align-items flex-start
  &__button
    pos relative
    color $dark
    fontify 14px 500 22px
    border-bottom 2px dotted $orange
    cursor pointer
    mb 28px
    transition .5s border, .5s color
    @media $mLandscape
      flex-grow 1
    @media $mPortraitMax
      mb 10px
    &:before
      content ""
      pos absolute
      transition .5s background
      @media $mPortraitMax
        dn()
    &_order
      mr 70px
      l 39px
      @media $mPortraitMax
        l 0
        mr 0
      &:before
        l -38px
        t -2px
        size 28px
        background url("data:image/png;base64,") no-repeat center
      &.active:before,
      &:hover:before
        background url("data:image/png;base64,") no-repeat center
    &_question
      mr 67px
      l 36px
      @media $mPortraitMax
        mr 0
        l 0
      &:before
        l -35px
        t -2px
        size 26px
        background url("data:image/png;base64,") no-repeat center
      &.active:before,
      &:hover:before
        background url("data:image/png;base64,") no-repeat center
      
    &_reviews
      l 42px
      @media $mPortraitMax
        l 0
      &:before
        l -42px
        t 2px
        size 34px 24px
        background url("data:image/png;base64,") no-repeat center
      &.active:before,
      &:hover:before
        background url("data:image/png;base64,") no-repeat center
    &.active,
    &:hover
      border-color transparent
    &.active
      color $orange
  .reviews__form
    border 0
    padding 0
    mt 39px
    &-text
      mt -4px
    &-main
      w 875px
  .common__placeholder
    bgc white
    w 100%
    line-height 48px
    h 100%
  .common__input:focus,
  .common__input.notempty,
  .common__textarea:focus,
  .common__textarea.notempty
  .fakecheckbox__label:before
    bgc white
  &__block:not(:first-child)
    dn()
  &__cols
    display flex
    justify-content space-between
    @media $tLandscapeMax
      flex-direction column-reverse
  &-page
    & ^[0]__question-item,
    & ^[0]__person
      bgc #f5f5f5
  &__left
    w calc(100% - 363px)
    @media $tLandscapeMax
      w 100%
  &__right
    w 332px
    @media $tLandscapeMax
      w 100%
      height auto !important
  .search
    &__form
      w 100%
      max-width none
      mt -12px
      mb 75px
      @media $tPortraitMax
        mb 35px
      @media $tLandscapeMax
        padding 0
    &__inp
      color $dark
      pr 35px
      font-size 14px
      border-bottom 2px solid $dark
      &::-webkit-input-placeholder
        color alpha($dark, .8)
      &::-moz-placeholder
        color alpha($dark, .8)
      &:-ms-input-placeholder
        color alpha($dark, .8)
    &__icon
      cursor pointer
      z-index 1
      t 21px
      r -2px
      background url("data:image/png;base64,") no-repeat center
      transition .5s opacity
      &:hover 
        opacity .7
      @media $tPortraitMax
        t 10px
  &__question
    display flex
    flex-wrap wrap
    pos relative
    &-cats
      pos relative
      color alpha($dark, .5)
      fontify 14px 400 22px
      mb 30px
      @media $desktopMax
        mb 60px
      @media $mLandscape
        display flex
        flex-direction column
        align-items flex-start
        mb 80px
        ^[0]-page &
          mb 30px
      > span
        mr 20px
        @media $tPortraitMax
          db()
          mr0
          mb 20px
    &-cat
      ib()
      cursor pointer
      pos relative
      color $dark
      fontify 14px 500 22px
      padding 0
      border-bottom 2px dotted $orange
      transition .5s border
      &:hover
        border-color transparent
      &.active
        border-color transparent
        color white
        bgc $orange
        padding 5px 16px 3px
        t -6px
        border-radius 16px
        @media $mLandscape
          t 0
      & + &
        ml 20px
        @media $mLandscape
          ml 0
          mt 10px
        &.active
          ml 12px
          @media $mLandscape
            ml 0
      &.active + &
        ml 12px
        @media $mLandscape
          ml 0
    &-toall
      pos absolute
      r 34px
      t 0
      padding 0
      color $dark
      fontify 14px 500 22px
      border-bottom 2px solid $orange
      transition .5s border
      @media $desktopMax
        r auto
        t auto
        l 0
        b -30px
      @media $mLandscape
        b -50px
      span
        fontify 14px 400 22px
      &:hover
        border-color transparent
      &:after
        content ""
        pos absolute
        r -34px
        t 4px
        size 24px 16px
        background url("data:image/png;base64,") no-repeat center
    &-list
      display flex
      flex-direction column
      &-tab:not(:first-child)
        dn()
    &-item
      bgc white
      padding 48px 51px 42px 51px
      @media $mLandscape
        padding 28px 31px 22px 31px
      & + &
        mt 28px
    &-row
      display flex
      & + &
        mt 20px
    &-info
      w 80px
      pr 20px
    &-title
      color $dark
      fontify 14px 500 22px
    &-date
      color alpha($dark, .5)
      fontify 12px 400 22px
    &-text
      w calc(100% - 80px)
      fontify 14px 400 22px
    &-share
      mt 10px
      &-title
        ib()
        color alpha($dark, .5)
        fontify 14px 400 22px
        mr 20px
      &-icon
        ib()
        cursor pointer
        transition .5s background, .5s opacity
        &:hover
          opacity 1
        &_fb
          size 7px 14px
          opacity .4
          mt 4px
          background url("data:image/png;base64,") no-repeat center
          &:hover
            background url("data:image/png;base64,") no-repeat center
        &_tw
          size 13px 12px
          opacity .4
          mt 5px
          background url("data:image/png;base64,") no-repeat center
          &:hover
            background url("data:image/png;base64,") no-repeat center
        &_vk
          size 15px 8px
          opacity .4
          mt 7px
          background url("data:image/png;base64,") no-repeat center
          &:hover
            background url("data:image/png;base64,") no-repeat center
        & + &
          ml 20px
    &-toggler
      ib()
      pos relative
      color $dark
      mt 2px
      mb 6px
      fontify 14px 400 16px
      border-bottom 2px dotted $orange
      transition .5s border
      &:hover
        border-color transparent
      &:after
        content attr(data-default)
      &.open:after
        content attr(data-open)
      &:before
        content ""
        pos absolute
        t 3px 
        r -15px
        size 10px 14px
        background url("data:image/png;base64,") no-repeat center
        transition .5s transform
        will-change transform
      &.open:before
        transform rotate(180deg)
    &-hidden
      dn()
      &.show
        db()
        mb 20px
    &-showmore
      mt 47px
      text-align center
      pr 17px
      &-href
        pos relative
        cursor pointer
        color $dark
        fontify 14px 500 16px
        border-bottom 2px dotted $orange
        transition .5s border
        &:hover
          border-color transparent
        &:before
          content ""
          pos absolute
          t 3px 
          r -19px
          size 10px 14px
          background url("data:image/png;base64,") no-repeat center
          transition .5s transform
          will-change transform
        &.open:before
          transform rotate(180deg)
  &__person
    bgc white
    padding 41px
    text-align center
    @media $tLandscapeMax
      position static !important
      transform none !important
      width 100% !important
      mb 30px
    @media $mPortraitMax
      padding 21px
    &-imgover
      db()
      size 187px
      margin 0 auto
      border-radius 50%
      overflow hidden
      pos relative
      mb 26px
    &-img
      imgCentering()
    &-name
      color $dark
      fontify 18px 500 25px
      mb 8px
    &-dlg
      color $dark
      fontify 14px 400 22px
      mb 30px
  &__rating
    display flex
    align-items center
    mt 11px
    mb 40px
    @media $mLandscape
      flex-direction column
      align-items flex-start
    &-digits
      ib()
      size 60px
      mr 19px
      text-align center
      bgc $orange
      color #ffffff
      fontify 30px 400 60px
      @media $mLandscape
        mr 0
        mb 7px
    &-percent
      color alpha($dark, .8)
      fontify 14px 400 22px
      span
        db()
        color $dark
        fontify 20px 500 28px
  &__yandex
    display flex
    justify-content space-between
    mt 18px
    mb 40px
    @media $tLandscapeMax
      justify-content flex-start
      mb 10px
    @media $mPortraitMax
      flex-direction column
      align-items flex-start
    &-title
      color $dark
      fontify 14px 400 22px
      w 138px
      pt 1px
      pl 2px
      @media $tLandscapeMax
        mr 20px
      @media $mPortraitMax
        mr 0
        mb 8px
        w 100%
  &__makerev
    bgc white
    padding 35px 31px 41px
    text-align center
    @media $tLandscapeMax
      position static !important
      transform none !important
      width 100% !important
      mb 30px
    &-title
      color $dark
      fontify 18px 500 25px
      mb 8px
    &-text
      color $dark
      fontify 14px 400 22px
      mb 24px
  &__reviews
    &-list
      display flex
      flex-direction column
    &-item
      display flex
      justify-content space-between
      bgc white
      padding 44px 51px 50px 51px
      @media $tPortraitMax
        flex-direction column
      @media $mLandscape
        padding 24px 31px 30px 31px
      & + &
        mt 28px
    &-info
      w 290px
      pr 30px
      @media $tPortraitMax
        w 100%
        mb 30px
      &-date
        color alpha($dark, .8)
        fontify 12px 400 22px
      &-name
        color $dark
        fontify 20px 500 28px
      &-stars
        db()
        pos relative
        mt 12px
        mb 13px
        size 139px 20px
        background url("data:image/png;base64,") no-repeat left top
        &:before
          content ""
          pos absolute
          l 0
          t 0
          h 100%
          w 0
          background url("data:image/png;base64,") no-repeat left top
        &_star1:before
          w 20%
        &_star2:before
          w 40%
        &_star3:before
          w 60%
        &_star4:before
          w 80%
        &_star5:before
          w 100%
    &-feat
      w calc(100% - 290px)
      @media $tPortraitMax
        w 100%
      &row
        &_answer
          bgc #f7f7f6
          padding 25px 30px
        & + &
          mt 18px
          &_answer
            mt 22px
    &-title
      color $dark
      fontify 20px 500 28px
      mb 8px
    &-text
      color $dark
      fontify 14px 400 22px
    &-showmore
      mt 47px
      text-align center
      pr 17px
      &-href
        pos relative
        cursor pointer
        color $dark
        fontify 14px 500 16px
        border-bottom 2px dotted $orange
        transition .5s border
        &:hover
          border-color transparent
        &:before
          content ""
          pos absolute
          t 3px 
          r -19px
          size 10px 14px
          background url("data:image/png;base64,") no-repeat center
          transition .5s transform
          will-change transform
        &.open:before
          transform rotate(180deg) 